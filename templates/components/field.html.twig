{% block field_wrapper %}
    <ul id="grid" class="clear">
        {% set counter = 1 %}
        {% for field in fieldArray %}
            {% set fieldClass = 'hexagon' %}
            {% if field.isBaseArea %}
                {% set fieldClass = fieldClass ~ ' basearea' %}
            {% endif %}
            {% if 'User' == field.owner %}
                {% set fieldClass = fieldClass ~ ' allowed' %}
            {% endif %}

            <li>
                <div id="{{ field.id }}"
                     title="{{ field.id ~ ' (' ~ counter ~ ')' }}"
                     class="{{ fieldClass }}"
                     data-owner="{{ field.owner }}"
                     data-held=""
                     data-health=""
                     data-currenthealth=""
                ></div>
            </li>
            {% set counter = counter + 1 %}
        {% endfor %}
    </ul>
{% endblock %}
